<% if @comment.errors.present? %>
  $("#form-comment").html(" <%= j( render 'articles/form' ) %>");
<% else %>
  $("#list-comments").html(" <%= j( render 'articles/comments' ) %>");
  $("#comments-count").html(" <%= j( render 'articles/count' ) %>");
  $("#comment_content").val('');
  $("div.field_with_errors p.message").remove();
<% end %>