<div id="signinbox" class="mainbox col-md-6">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">
        Sign In
      </div>
    </div>
    <div class="panel-body" >
      <%= form_tag sessions_path, class: "form-horizontal" do %>
      <div class="input-group form-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <%= text_field_tag :username, (params[:username] unless params[:username].blank?), class: "form-control", placeholder: "Username" %>
        <span class="text-danger"></span>
      </div>
      <div class="input-group form-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
        <span class="text-danger"></span>
      </div>
      <div class="form-group">
          <%= submit_tag :submit, class: "btn btn-success", value: "Login" %>
      </div>
      <div class="form-group">
        <div class="border-top">
            Don't have an account!
            <%= link_to "Sign Up Here", sign_up_path, class: "up-link"  %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

