<div id="signinbox" class="mainbox col-md-6">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">
        Sign In
      </div>
    </div>
    <div class="panel-body" >
      <%= form_tag sessions_path, class: "form-horizontal" do %>
      <div class="form-group">
        <%= label_tag :username, nil, class: "col-md-3 control-label" %>
        <div class="col-md-9">
          <%= text_field_tag :username, (params[:username] unless params[:username].blank?), class: "form-control", placeholder: "Username" %>
          <span class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, nil, class: "col-md-3 control-label" %>
        <div class="col-md-9">
          <%= password_field_tag :password, class: "form-control", placeholder: "Password" %>
          <span class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-9 col-md-offset-3 ">
          <%= submit_tag :submit, class: "btn btn-info", value: "Login" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

