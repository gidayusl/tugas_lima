<%= form_for @comment, url: comments_path, remote: true do |f| %>
<div class="form-group">
  <%= f.hidden_field :article_id, value: @article.id %>
  <%= f.hidden_field :user_id, value: "1" %>
  <%= f.text_area :content, rows: 5, class: "form-control" %>
</div>
<div class="form-group">
  <% if !current_user %>
  <%= link_to 'Log in to comment', login_path, class: "btn btn-info pull-right" %>
  <% else %>
  <%= f.submit :submit, class: "btn btn-info pull-right" %>
  <% end %>
</div>
<% end %>